<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <meta charset="UTF-8">
        <link rel="icon" href="{{ asset('assets/logo.png') }}"/>
        <title>{% block title %}Artist Lobby{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/fontawesome-free-5.15.4-web/css/all.css') }}">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>
        <script
                src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
                crossorigin="anonymous"></script>
    {% endblock %}
    {% endblock %}
</head>
<body>
{% block header %}
    <nav class="navbar-container">
        <img class="logo-img" src="{{ asset('assets/logo.png') }}" alt="a text logo">
        <ul class="navbar-elements">
            <li class="navbar-element"><a class="navbar-a-element" href="{{ path('index') }}">Home<i
                            class="fas fa-angle-right"></i></a></li>
            <li class="navbar-element"><a class="navbar-a-element" href="{{ path('project_index') }}">Projects<i
                            class="fas fa-angle-right"></i></a></li>
            <li class="navbar-element"><a class="navbar-a-element" href="{{ path('contact_index') }}">Contact<i
                            class="fas fa-angle-right"></i></a></li>
            {% if is_granted('ROLE_ADMIN') %}
                <li class="navbar-element"><a class="navbar-a-element" href="{{ path('admin_index') }}">Admin<i
                                class="fas fa-angle-right"></i></a></li>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="navbar-element"><a class="navbar-a-element" href="{{ path('app_logout') }}">Log out
                        ( {{ app.user.email }} )<i
                                class="fas fa-angle-right"></i></a></li>
            {% else %}
                <li class="navbar-element"><a class="navbar-a-element" href="{{ path('login') }}">Log in<i
                                class="fas fa-angle-right"></i></a></li>
            {% endif %}
        </ul>
    </nav>
{% endblock %}

{% block body %}{% endblock %}

{% block footer %}
    <div class="footer">
        <p>Copyright M<i class="fab fa-etsy"></i> - {{ "now"|date("Y") }}</p>
    </div>
{% endblock %}

</body>
</html>
